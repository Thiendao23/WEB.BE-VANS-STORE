@{
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
<link href="~/Content/style(login).css" rel="stylesheet" />

<div class="tieu-de">
    <div class="dong-tieu-de">
        <h1>Đăng nhập tài khoản</h1>
    </div>
    <div class="duong-dan">
        <span><a href="@Url.Action("Index", "TrangChu")">Trang chủ</a></span>
        <span>/</span>
        <span class="chu-do">Đăng nhập tài khoản</span>
    </div>
</div>
<div class="mid container">
    
    <div class="middle-content">
        <div class="head-content">
            <h1>Đăng Nhập</h1>
        </div>
        <div id="error"></div>
        <form id="form" action="/" method="get">
            <div class="body-content">
                <div class="groub">
                    <label for="email">Email<span class="sym">*</span></label>
                    <input id="email" name="email " type="text" placeholder="Email" class="style-text" required>
                    <label for="password">Mật khẩu<span class="sym">*</span></label>
                    <input id="password" name="password" type="password" placeholder="Mật khẩu" class="style-text" required>
                    <div class="submit" type="submit"><a href="vans.html">Đăng nhập</a></div>
                </div>
            </div>
        </form>

    </div>
    <div class="text">
        <p class="style">Quên mật khẩu</p>
        <span>Chưa có tài khoản, đăng kí <a href="@Url.Action("Index", "DangKy")">Tại đây</a></span>
        <p>Hoặc đăng nhập bằng</p>
    </div>
    <div class="link">
        <img src="https://bizweb.dktcdn.net/assets/admin/images/login/fb-btn.svg">
        <img src="https://bizweb.dktcdn.net/assets/admin/images/login/gp-btn.svg">
    </div>
</div>
<script src="~/Content/js(login).js"></script>    